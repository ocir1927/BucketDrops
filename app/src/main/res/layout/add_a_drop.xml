<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_add_a_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_drop"
        android:textSize="24sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        />

    <ImageButton
        android:id="@+id/btn_close"
        android:padding="5sp"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_alignTop="@+id/text_add_a_drop"
        android:src="@drawable/ic_close"
        />

    <EditText
        android:id="@+id/et_add_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/what_is_your_drop"
        android:layout_below="@+id/text_add_a_drop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        />


    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:layout_below="@+id/et_add_drop" />

    <Button
        android:id="@+id/btn_add_it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_picker"
        android:text="@string/add_it"
        android:textAllCaps="false"
        android:textSize="24sp"
        />

</RelativeLayout>